%div[ideas_feedback]
  - user_classes = ["problem-owner"]
  - user_classes << "you" if ideas_feedback.user == current_user
  .user{ :class => user_classes.join(" ") }
    = link_to ideas_feedback.user, :title => ideas_feedback.user do
      = gravatar_for(ideas_feedback.user)
      .name= ideas_feedback.user
  .content
    %p= ideas_feedback.content
