%h2 Edit user
- form_for(@user) do |f|
  = f.error_messages
  = render :partial => 'fields', :locals => { :f => f }
  .actions
    = f.submit t(".buttons.update", :default => "Update")
%div
  = gravatar_for @user
  = link_to(t(".links.change_gravatar", :default => "change"), "http://gravatar.com/emails")
