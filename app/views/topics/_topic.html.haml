= render :layout => "supervisions/contentable", :object => topic, :locals => {:content => topic_content(topic)} do
  - if @vote && !topic.content.blank?
    = semantic_form_for(@vote, :url => topic_votes_path) do |f|
      = hidden_field_tag :supervision_id, @supervision.id
      = f.input :statement_id, :as => :hidden, :value => topic.id
      = f.input :statement_type, :as => :hidden, :value => "Topic"

      = f.commit_button t(".vote", :default => "Vote")

