- form_for [@chat_room, @chat_update], :html => {:autocomplete => "off", :class => 'edit_chat_update'}  do |f|
  = hidden_field_tag :update_type, "commit"
  = hidden_field_tag "parent_id", @chat_update.parent? ? @chat_update.parent.id : ''
  .field
    = f.label :message
    = f.text_field :message
    = f.submit "Send"

