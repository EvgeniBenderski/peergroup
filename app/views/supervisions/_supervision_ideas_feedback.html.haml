.ideas_feedback_part
  %h2= t("supervisions.show.ideas_feedback", :default => "Feedback on ideas")

  - if @supervision.giving_ideas_feedback?
    - if @supervision.problem_owner?(current_user)
      = semantic_form_for([@supervision, IdeasFeedback.new]) do |f|
        = f.inputs do
          = f.input :content, :hint => t("supervision.show.ideas_feedback_content_hint", :default => "Provide feedback on ideas")
        = f.buttons :commit
    - else
      %p.waiting= t("supervisions.show.ideas_feedback_waiting", :default => "Waiting for problem owner feedback")

  - else
    = render @supervision.ideas_feedback
